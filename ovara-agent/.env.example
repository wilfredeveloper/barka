# Environment Configuration for ovara-agent
# Copy this file to .env and update the values

# Database Configuration (shared with barka-backend)
MONGODB_URI=mongodb://localhost:27017/barka

# Authentication (must match barka-backend JWT secret)
JWT_SECRET=your_jwt_secret_here_must_match_barka_backend

# Google ADK Configuration
GOOGLE_API_KEY=your_google_api_key_here

# Server Configuration
PORT=8000
HOST=0.0.0.0

# Logging Configuration
LOG_LEVEL=INFO

# Session Configuration
SESSION_MAX_AGE_HOURS=24
SESSION_CLEANUP_INTERVAL_HOURS=6

# Message Configuration
MAX_CONVERSATION_HISTORY=50
MAX_MESSAGE_LENGTH=10000

# WebSocket Configuration
WEBSOCKET_TIMEOUT_SECONDS=100
WEBSOCKET_PING_INTERVAL=30

# Development/Debug Settings
DEBUG=false
ENABLE_LEGACY_ENDPOINTS=true

# Memory Service Configuration
MEM0_API_KEY=your_mem0_api_key_here
MEM0_BASE_URL=https://api.mem0.ai
MEMORY_SERVICE_TYPE=hybrid  # Options: adk_only, mem0_only, hybrid
MEMORY_ENCRYPTION_KEY=your_32_character_encryption_key_here

# Privacy and Security
ENABLE_MEMORY_ENCRYPTION=true
MEMORY_RETENTION_DAYS=365
ENABLE_USER_MEMORY_CONTROL=true
